<%- layout('layout/boilerplate') %>

  <h1>Index</h1>
  <div class="row-6">
    <% for(let note of notes){ %>
      <div class="col-3">
        <div class="card mb-5" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title">
              <%= note.title %>
            </h5>
            <p class="card-text">
              <%= note.note %>
            </p>
            <a class="btn btn-primary" href="notes/<%= note.id %>">View</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>