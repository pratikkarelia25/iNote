<%- layout('layout/boilerplate') %>

  <h1 class=" display-4 mb-3 text-center mt-3">All Notes</h1>
  <div class="row no-gutters">
    <% for(let note of notes){ %>
      <div class="col-xl-3 col-lg-4 col-md-6 ">
        <div class="card mb-4 ml-4" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title">
              <%= note.title %>
            </h5>
            <p class="card-text">
              <%= note.note %>
            </p>
            <a class="btn btn-warning" href="notes/<%= note.id %>/edit">Edit</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>