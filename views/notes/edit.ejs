<%- layout('layout/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="mb-5">New Note</h1>
            <form action="/notes/<%= note._id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="notes[title]" value="<%= note.title %>"/>
                </div>
                <div class="mb-3">
                    <label for="note" class="form-label">Note</label>
                    <textarea class="form-control" id="note" rows="3" name="notes[note]" ><%= note.note %></textarea>
                </div>
                <button type="submit" class="btn btn-success">Note It</button>
            </form>
        </div>
    </div>